# Turso Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Cloudflare R2
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=tyos-photos
R2_PUBLIC_URL=https://photos.tylerd.co

# API Authentication
API_AUTH_TOKEN=your-secret-bearer-token

# GitHub (for triggering deploys via GitHub Actions)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo or actions:write
GITHUB_TOKEN=ghp_yourGitHubPersonalAccessToken
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=tyos

# Server
PORT=3000

# CORS - Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:4173
# Production: https://admin.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
